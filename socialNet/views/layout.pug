doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title= title || 'Social Admin'
    // Подключение Bootstrap (CDN как резерв)
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", integrity="", crossorigin="anonymous")
    if cssPath
      link(rel="stylesheet", href=cssPath)
    if cssPathLess && cssPathLess !== cssPath
      link(rel="stylesheet", href=cssPathLess)
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary.mb-4
      .container
        a.navbar-brand(href="/users") Social Admin
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="/users") Пользователи
    .container
      block content
    // Bootstrap JS (CDN резерв)
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", integrity="", crossorigin="anonymous")
    if jsPath
      if jsModule
        script(type="module", src=jsPath)
      else
        script(src=jsPath)
